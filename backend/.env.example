# Database Configuration
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://user:password@localhost:5432/agenda_mvp"

# JWT Configuration
# Secret for access tokens (use a strong random string in production)
JWT_SECRET="supersecret"

# Access token expiration (examples: 15m, 1h, 2d)
JWT_EXPIRES_IN="15m"

# Secret for refresh tokens (use a different strong random string in production)
REFRESH_SECRET="superrefreshsecret"

# Refresh token expiration (examples: 7d, 30d)
REFRESH_EXPIRES_IN="7d"

# Application Configuration
# Default timezone for the application (IANA timezone format)
# Examples: America/Sao_Paulo, America/New_York, Europe/London
APP_DEFAULT_TIMEZONE="America/Sao_Paulo"

# Default slot granularity in minutes (must be 5, 10, 15, 20, 30, or 60)
# This is used as fallback when filial doesn't have custom setting
SLOT_GRANULARITY_MINUTES="15"

# Server port
PORT=3001

# Email Configuration (optional)
# Email address used as sender
EMAIL_FROM="no-reply@seudominio.com"

# SMTP connection URL (optional, for sending invitation emails)
# Format: smtp://user:password@smtp.example.com:587
EMAIL_SMTP_URL=""

# CORS Configuration (optional)
# Allowed origins for CORS (use * for development, specific domains for production)
# Examples: http://localhost:3000, https://yourdomain.com
CORS_ORIGIN="*"
